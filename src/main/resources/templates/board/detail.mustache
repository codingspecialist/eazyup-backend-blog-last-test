    <!-- Í≤åÏãúÍ∏ÄÎÇ¥Ïö© -->
    <div>
        <h2><b>{{board.title}}</b></h2>
        <hr />
        <div class="m-4 p-2">
            {{board.content}}
        </div>
    </div>

    <!-- ÎåìÍ∏Ä -->
    <div class="card mt-3">
        <!-- ÎåìÍ∏ÄÎì±Î°ù -->
        <div class="card-body">
            <form>
                <input type="hidden" id="boardId" value="{{board.id}}">
                <textarea class="form-control" rows="2" id="comment"></textarea>
                <div class="d-flex justify-content-end">
                    <button type="button" class="btn btn-outline-primary mt-1" onclick="saveReply()">ÎåìÍ∏ÄÎì±Î°ù</button>
